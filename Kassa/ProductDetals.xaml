<Window x:Class="Kassa.ProductDetals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kassa"
        mc:Ignorable="d"
        Title="ProductDetals" Height="359" Width="400">
    
    <Grid>
       
            <ItemsControl x:Name="Product" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button BorderBrush="LightGray" Background="White">
                        <DockPanel>
                                
                                <TextBlock Margin="2" DockPanel.Dock="Left"  FontSize="16" Text="{Binding Path=}" />
                                
                            </DockPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
           
        </ItemsControl>
    


    </Grid>
</Window>
